<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/main_defaultMangerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START" />

    <RadioGroup
        android:id="@+id/main_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_defaultRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="默认"/>

        <RadioButton
            android:id="@+id/main_diyRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义"/>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#808080"
        android:textSize="10sp"
        android:text="配置数据，单列保存，一处设置，全局通用"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/main_fragmentBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="FRAGMENT" />

    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/main_rb_af"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Activity + Fragment" />

        <RadioButton
            android:id="@+id/main_rb_vpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity + (ViewPager + Fragment)"/>

        <RadioButton
            android:id="@+id/main_rb_ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity + (Fragment + Fragment)"/>

    </RadioGroup>


    <Button
        android:id="@+id/main_fileMangerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SUPER" />

    <include
        android:id="@+id/main_include"
        layout="@layout/layout_result_txt" />

</LinearLayout>